{
  "private": true,
  "name": "everwaking",
  "version": "0.0.0",
  "license": "MIT",
  "author": {
    "name": "Adam Johannesmeyer",
    "email": "adam.johannesmeyer@gmail.com",
    "url": "https://everwaking.com"
  },
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "build": "preact build --no-prerender",
    "serve": "preact build && preact serve",
    "dev": "preact watch",
    "lint": "eslint src",
    "deploy": "firebase deploy",
    "test": "cross-env BABEL_ENV=test jest --watch",
    "test:ci": "cross-env BABEL_ENV=test jest -u",
    "lighthouse": "lighthouse https://everwaking.com --output-path=./lighthouse/lighthouse.html --output html",
    "prettier": "prettier --write --trailing-comma=all \"src/views/**/*.js\" \"src/utils/**/*.js\" \"src/redux/**/*.js\" \"src/service-worker.js\""
  },
  "eslintConfig": {
    "extends": "eslint-config-synacor"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "babel-plugin-module-resolver": "^2.7.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-es2015-arrow-functions": "^6.22.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "cross-env": "^5.1.0",
    "eslint": "^4.5.0",
    "eslint-config-synacor": "^1.1.0",
    "if-env": "^1.0.0",
    "jest": "^21.2.1",
    "node-sass": "^4.5.3",
    "preact-cli": "^2.0.0",
    "sass-loader": "^6.0.6"
  },
  "dependencies": {
    "lodash.debounce": "^4.0.8",
    "preact": "^8.2.1",
    "preact-compat": "^3.17.0",
    "preact-redux": "^2.0.3",
    "preact-router": "^2.5.5",
    "redux": "^3.7.2"
  },
  "jest": {
    "testRegex": "(/__test__/.*\\.spec.js)$",
    "moduleNameMapper": {
      "\\.(css|sass|scss|pdf)$": "<rootDir>/__mocks__/styleMock.js"
    }
  }
}
